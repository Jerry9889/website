        <div class="container">

            <div class="columns is-desktop is-centered is-spaced">
                <div class="column is-10 is-spaced mdj-declaration mdj-marked">
                </div>
                <script src="/dist/js/marked.min.js"></script>
                <script>
                    $.get("https://raw.githubusercontent.com/MyDataJapan/documents/master/privacy-policy/index.markdown", function (data) {
                        var md = marked(data);
                        $(".mdj-declaration").html(md);
                    });
                </script>
            </div>
        </div>
    </section>
<%- include('../../_layout/footer') -%>
